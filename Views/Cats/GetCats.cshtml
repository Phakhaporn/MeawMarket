@model IEnumerable<MeawMarket.Models.Cat>

@{
    ViewData["Title"] = "GetCats";
    var userId = (int?)(ViewData["UserId"]) ?? 0;
    var username = User.Identity?.Name ?? "Guest";
    var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
    var errorMessage = ViewData["errorMessage"] as string ?? "";
    var successMessage = ViewData["successMessage"] as string ?? "";
}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="/css/styles.css" />

    </head>
    <body>

        <h2>Find Your Meaw</h2>
        <form id="searchForm" class="mb-4">
            <label for="breed">Breed:</label>
            <input type="text" id="breed" name="breed" class="form-control">

            <label for="gender">Gender:</label>
            <select id="gender" name="gender" class="form-control">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>

            <label for="maxPrice">Max Price:</label>
            <input type="number" id="maxPrice" name="maxPrice" class="form-control">

            <button type="submit" class="btn btn-primary mt-2">Search</button>
        </form>
        <form method="get" action="/Home/Index">
            <button type="submit" class="btn btn-secondary mt-3">Back to Home Page</button>
        </form>

        <!-- ✅ ส่วนแสดงผลลัพธ์ -->
        <div id="catResults" class="row mt-4"></div>

        <script>

        const errorMessage = "@errorMessage";
        const successMessage = "@successMessage";

        if (errorMessage) {
            alert(errorMessage); // แสดงข้อความ Error
        }

        if (successMessage) {
            alert(successMessage); // แสดงข้อความ Success
        }


        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

        <script src="/js/search.js"></script>

    </body>
</html>
